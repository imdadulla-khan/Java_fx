<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.SignupController">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <Label text="Create an Account" style="-fx-font-size: 18px;" />
            <GridPane hgap="10" vgap="10">
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>
            <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup" />
            <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
        </VBox>
    </children>
</AnchorPane>
